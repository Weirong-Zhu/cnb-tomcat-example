<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Tomcat example on API</display-name>

  <servlet>
    <servlet-name>RequestInfo</servlet-name>
    <servlet-class>engine.examples.ui.RequestInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestInfo</servlet-name>
    <url-pattern>/info</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestHeader</servlet-name>
    <servlet-class>engine.examples.ui.RequestHeader</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestHeader</servlet-name>
    <url-pattern>/header</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestParam</servlet-name>
    <servlet-class>engine.examples.ui.RequestParam</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestParam</servlet-name>
    <url-pattern>/params</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestCookie</servlet-name>
    <servlet-class>engine.examples.ui.RequestCookie</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestCookie</servlet-name>
    <url-pattern>/cookie</url-pattern>
  </servlet-mapping>

</web-app>
